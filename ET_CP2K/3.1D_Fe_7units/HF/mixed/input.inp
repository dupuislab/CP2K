@SET PROJECT  p_fe_
@SET RESFILE  p_fe_
@SET RESFILE0 p_0_
@SET RESFILE1 p_1_
@SET RESTART 0
@SET CELL_A 21.385
@SET CELL_B 35
@SET CELL_C 35
@SET RUNTYPE ENERGY
@SET OT_MINI CG
@SET EPSSCF 1.0E-06


&GLOBAL
  PROJECT ${PROJECT}
  RUN_TYPE ${RUNTYPE}
  PRINT_LEVEL MEDIUM
  EXTENDED_FFT_LENGTHS 
  FLUSH_SHOULD_FLUSH T   
&END GLOBAL

&MULTIPLE_FORCE_EVALS
  FORCE_EVAL_ORDER 1 2
  MULTIPLE_SUBSYS F
&END

@SET XYZ   ./midpoint.xyz
@include dft_0.inc
@include dft_1.inc
&FORCE_EVAL
  METHOD MIXED
  &MIXED
    MIXING_TYPE GENMIX
    NGROUPS  1
    &GENERIC
      MIXING_FUNCTION E1-E2
      VARIABLES E1 E2
# Propagate the Equation of Motion according to energy difference
    &END
  &END
 &SUBSYS
    &CELL
   A   ${CELL_A}        0.0000000000        0.0000000000
   B   0.0000000000       ${CELL_B}      0.0000000000
   C   0.0000000000        0.0000000000      ${CELL_C}
    &END CELL
  &TOPOLOGY
    COORD_FILE_FORMAT XYZ
    COORD_FILE_NAME ${XYZ}
    &CENTER_COORDINATES ON
    &END CENTER_COORDINATES
  &END TOPOLOGY
      &KIND Fe
      ELEMENT Fe
      BASIS_SET mod-DZV
      POTENTIAL GTH-BLYP-q16
   &END KIND
   &KIND O
      BASIS_SET mod-DZV
      POTENTIAL GTH-BLYP-q6
   &END KIND

   &KIND H
      BASIS_SET mod-DZV
      POTENTIAL GTH-BLYP-q1
   &END KIND
    &COLVAR
       &U
         &MIXED
           ENERGY_FUNCTION E2-E1
           VARIABLES E1 E2
         &END
       &END
    &END COLVAR
  &END SUBSYS
&END FORCE_EVAL


@if ${RESTART} == 1
&EXT_RESTART
  RESTART_FILE_NAME ${PROJECT}-1.restart
  RESTART_DEFAULT T
&END EXT_RESTART
@endif
